<Window x:Class="Taro_kyrsovaя.Просмотр_услуг"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taro_kyrsovaя"
         xmlns:mvvm="clr-namespace:Taro_kyrsovaя"
         DataContext="{DynamicResource vm}" 
        mc:Ignorable="d"
        Title="Просмотр_услуг" Height="450" Width="800">
    <Window.Resources>
        <mvvm:TaroMain x:Key="vm"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">

            <TextBox Width="300"/>
            <Button Content="Поиск" Width="50" Height="20" Background="Pink"/>
        </StackPanel>
        <ListView Grid.Row="1" ItemsSource="{Binding Services}" >
            <ListView.View>
                <GridView>
                    
                    <GridViewColumn Header="Название" Width="230" DisplayMemberBinding ="{Binding Title}"/>
                    <GridViewColumn Header="Стоимость" Width="230" DisplayMemberBinding ="{Binding Price}"/>
                    <GridViewColumn Header="Длительность" Width="230" DisplayMemberBinding ="{Binding Sessionduration}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
