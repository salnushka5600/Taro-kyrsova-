<Window x:Class="Taro_kyrsovaя.Добавить_Сессию"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taro_kyrsovaя"
         xmlns:mvvm="clr-namespace:Taro_kyrsovaя"
        DataContext="{DynamicResource vm}"
        mc:Ignorable="d"
        Title="Добавить_расписание услуг" Height="450" Width="800">
    <Window.Resources>
        <mvvm:SheduleVM x:Key="vm"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>

        </Grid.RowDefinitions>
        <Label Content="Дата" FontSize="22"  Grid.Row="0" />
        <DatePicker  Height="30" Width="250" HorizontalAlignment="Left" Margin="0,10,0,0" Grid.Row="0"  Background="#FFF4D2D7" Text="{Binding Date, UpdateSourceTrigger=PropertyChanged}" DataContext="{Binding NewShedule}"/>
        <Label Content="Услуга" FontSize="22"  Grid.Row="1" />
        <ComboBox  Height="30" Width="250" HorizontalAlignment="Left" Margin="0,10,0,0" Grid.Row="1"  Background="#FFF4D2D7" Text="{Binding Service, UpdateSourceTrigger=PropertyChanged}" DataContext="{Binding NewShedule}"/>
        <Label Content="Имя мастера" FontSize="22"  Grid.Row="2" />
        <ComboBox  Height="30" Width="250" HorizontalAlignment="Left" Margin="0,10,0,0" Grid.Row="2" Background="#FFF4D2D7" Text="{Binding IDMaster, UpdateSourceTrigger=PropertyChanged}" DataContext="{Binding NewShedule}"/>
        <Label Content="Имя клиента" FontSize="22"  Grid.Row="3" />
        <ComboBox  Height="30" Width="250" HorizontalAlignment="Left" Margin="0,10,0,0" Grid.Row="3"  Background="#FFF4D2D7" Text="{Binding IDClient, UpdateSourceTrigger=PropertyChanged}" DataContext="{Binding NewShedule}"/>
        <Button Content="Добавить" Height="30" Width="200" HorizontalAlignment="Left" Grid.Row="4"  Background="Pink" Command="{Binding Insertshedule}"/>
    </Grid>
</Window>
